{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": 0,
    "global-require": "off",
    "no-unused-vars": ["error", { "args": "none" }],
    "implicit-arrow-linebreak": 0,
    "import/no-dynamic-require": "off",
    "object-curly-newline": "off",
    "operator-linebreak": ["error", "after"],
    "no-param-reassign": "off"
  }
}
